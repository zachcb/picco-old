{
  "name": "picco-api",
  "version": "0.1.0",
  "description": "&_&",
  "main": "src/index.ts",
  "scripts": {
    "start": "npm run build && npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node dist/src/server.js",
    "migrate": "node-pg-migrate",
    "watch-node": "nodemon --inspect=0.0.0.0 src/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node,SQL\" -c \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
    "watch-sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@types/moment-timezone": "^0.5.30",
    "boom": "^7.3.0",
    "koa": "^2.13.0",
    "koa-body": "^4.2.0",
    "koa-bodyparser": "^4.3.0",
    "koa-bunyan-logger": "^2.1.0",
    "koa-helmet": "^6.0.0",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-router": "^9.4.0",
    "koa-static": "^5.0.0",
    "koa-swagger-decorator": "^1.7.3",
    "lodash": "^4.17.20",
    "moment-timezone": "^0.5.31",
    "pg": "^8.4.2",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0-alpha.6",
    "swagger2": "^2.0.0",
    "swagger2-koa": "^2.0.0",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.29",
    "typeorm-typedi-extensions": "^0.2.3"
  },
  "devDependencies": {
    "@types/boom": "^7.3.0",
    "@types/koa": "^2.11.6",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-bunyan-logger": "^2.1.3",
    "@types/koa-helmet": "^6.0.1",
    "@types/koa-json": "^2.0.18",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.4.1",
    "@types/koa-static": "^4.0.1",
    "@types/koa__cors": "^3.0.2",
    "@types/lodash": "^4.14.164",
    "@types/node": "^14.14.6",
    "@types/pg": "^7.14.5",
    "@types/shelljs": "^0.8.8",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.12.1",
    "nodemon": "^2.0.6",
    "shelljs": "^0.8.4",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.5"
  }
}
